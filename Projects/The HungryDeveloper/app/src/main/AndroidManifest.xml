<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/kitchen_chef_logo_design_vector_template"
        android:label="@string/app_name"
        android:roundIcon="@drawable/chihuan"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheHungryDeveloper"
        tools:targetApi="31">

        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TheHungryDeveloper.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DessertsActivity"
            android:exported="true"
            android:label="Desserts"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".StartersActivity"
            android:exported="true"
            android:label="Starters"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainCoursesActivity"
            android:label="Main Courses"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
        </activity>
    </application>

</manifest>